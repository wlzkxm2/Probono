    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:id="@+id/drawerView"
        android:background="#5559b4"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#5A88FF">

            <TextView
                android:id="@+id/main_easy_drawer_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안녕하세요"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="left">
            </TextView>

            <ImageView
                android:id="@+id/main_easy_user_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/main_easy_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="80dp"
                android:text="김진민 님"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:layout_gravity="left"/>

            <ImageView
                android:id="@+id/main_easy_user_img_nogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/main_easy_user_name_nogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="94dp"
                android:layout_marginTop="80dp"
                android:text="로그인해주세요"
                android:textColor="#ffffff"
                android:textSize="26dp"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/main_easy_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:text="wlsalsdla1@g.shingu.ac.kr"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:layout_gravity="left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="200dp"
                android:background="#80ffffff"
                android:layout_gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="228dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/main_easy_user_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="228dp"
                android:onClick="OnClick"
                android:text="계정 설정"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#80ffffff"
                android:layout_marginTop="270dp"
                android:layout_gravity="left"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="298dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/main_easy_calendar"
