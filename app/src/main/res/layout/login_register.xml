<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <ImageButton
                android:id="@+id/back_reg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                app:tint="#8F6CB1" />

            <!--회원가입 쪽이다-->
            <TextView
                android:id="@+id/userreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="#222222"
                android:textSize="30dp" />

            <!--아이디 쪽이다-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="아이디" />
            <!--회원가입 입력칸이다-->
            <EditText
                android:id="@+id/editText_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="아이디를 입력해 주세요."
                android:inputType="text"
                android:text=""
                android:textColorHint="#AAAAAA" />

            <!--비밀번호 쪽이다-->
            <Button
                android:id="@+id/userIDCheck_Btn"
                style="@android:style/Widget.Material.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이디 중복검사"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="비밀번호" />

            <!--비밀번호 등록칸이다-->
            <EditText
                android:id="@+id/editText_userpw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="비밀번호를 입력해 주세요."
                android:inputType="textPassword"
                android:text=""
                android:textColorHint="#AAAAAA" />
            <!-- 비밀번호 확인-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="비밀번호 확인" />

            <!--비밀번호 재확인 입력칸이다-->
            <EditText
                android:id="@+id/editText_usrpw_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="비밀번호를 다시 입력해 주세요."
                android:inputType="textPassword"
                android:text=""
                android:textColorHint="#AAAAAA" />

            <!--이메일 쪽이다-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="이메일" />
            <!--이메일 입력칸이다-->

            <!--나이쪽이다-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:ems="10"
                    android:hint="이메일을 입력해 주세요."
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textColorHint="#AAAAAA" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="\u0040"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/editText_lastemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="이메일 뒷부분"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="나이" />
            <!--나이 입력칸이다-->
            <EditText
                android:id="@+id/editText_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"

                android:hint="나이를 입력해 주세요."
                android:inputType="number"
                android:text=""
                android:textColorHint="#AAAAAA" />

            <!--주소 쪽이다-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="주소" />
            <!--주소 입력칸이다-->
            <EditText
                android:id="@+id/editText_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"

                android:ems="10"
                android:hint="주소를 입력해 주세요."
                android:inputType="date"
                android:text=""
                android:textColorHint="#AAAAAA" />
            <!--상제주소쪽이다-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="상세주소" />
            <!--상세주소 입력칸이다-->
            <EditText
                android:id="@+id/editText_detailaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"

                android:ems="10"
                android:hint="상세주소를 입력해 주세요."
                android:inputType="date"
                android:text=""
                android:textColorHint="#AAAAAA" />
            <!--우편번호소쪽이다-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="우편번호" />
            <!--상세주소 입력칸이다-->
            <EditText
                android:id="@+id/editText_Zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"

                android:hint="우편번호를 입력해 주세요."
                android:inputType="number"
                android:text=""
                android:textColorHint="#AAAAAA" />
            <!--가입완료 버튼이다-->
            <!--가입완료 버튼이다-->
            <Button
                android:id="@+id/userIDCheck_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/exam"
                android:text="가입 완료"
                android:textColor="#000000"
                android:textSize="20dp" />



        </LinearLayout>
    </ScrollView>



</LinearLayout>
