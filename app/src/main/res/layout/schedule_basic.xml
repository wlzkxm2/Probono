<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/schedule_basic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일정 제목"
        android:singleLine="false"
        android:textColor="#5A88FF"
        android:ellipsize="end"
        />

    <EditText
        android:id="@+id/schedule_basic_title_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="일정 제목이 설정되지 않았습니다"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/schedule_basic_time"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="일정 시간"
        android:textColor="#5A88FF"
        android:singleLine="false"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/schedule_basic_start_time_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="시작"
            android:textSize="20dp"
            android:singleLine="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ~ "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/schedule_basic_end_time_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="종료"
            android:textSize="20dp"
            android:singleLine="false"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/schedule_basic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="일정 내용"
        android:textColor="#5A88FF"
        android:singleLine="false"
        />

    <EditText
        android:id="@+id/schedule_basic_text_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="일정 내용이 등록되지 않았습니다"
        android:singleLine="false"/>

    <TimePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"/>




</LinearLayout>