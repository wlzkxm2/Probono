<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F6"

    >
    <!--    -->
    <!--   이지모드 설정 쪽이다-->

    <TextView
        android:id="@+id/setting_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/account"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold" />

    <!--    설정 버튼 화면 쪽이다-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:background="@drawable/exam"
        android:orientation="vertical"
        android:layout_marginTop="100dp">
        <!-- 계정 설정 버튼이다-->
        <Button
            android:id="@+id/namebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/example1"
            android:text="@string/name_setting"
            android:textColor="#000000"
            android:textSize="20dp" />
        <!-- 알림 설정 버튼이다-->
        <Button
            android:id="@+id/birthbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/example1"
            android:text="@string/birthday"
            android:textColor="#000000"
            android:textSize="20dp" />
        <!--언어 설정 버튼이다-->
        <Button
            android:id="@+id/accountback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/example1"
            android:text="@string/back"
            android:textColor="#000000"
            android:textSize="20dp" />
        <!--쿠폰 입력 버튼이다-->
        <!--문의사항 버튼이다-->
    </LinearLayout>
    <!-- 로그아웃 설정 버튼이다-->

    <!--로그아웃 버튼이다-->

</LinearLayout>